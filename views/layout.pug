doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/normalize.css")
        script(src='https://kit.fontawesome.com/6b4c519f3f.js' crossorigin='anonymous')
        link(rel="stylesheet", href="/css/app.css")
        title #{nombrePagina}
    body 
        header.barra 
            h1 UpTask - Administrador de Proyectos
            a(href="#") Cerrar sesion
        
        main.contenedor
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/nuevo-proyecto" class="boton") Nuevo Proyecto
                        span +
                .panel.lista-proyectos
                    h2 Proyectos
                    ul#proyectos.proyectos
                        if(proyectos.length)
                            each proyecto in proyectos
                                li
                                    a(href=`/proyectos/${proyecto.url}`)=proyecto.nombre 
                
            block contenido
        
                
        script(src="/dist/bundle.js")

        
    
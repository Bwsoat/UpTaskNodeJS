doctype html
html(lang="es")
    head
        include ./partials/header
        
    body.login
        .contenedor-formulario
            h1=`${nombrePagina}`
            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each  error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error
            form#formulario.caja.caja-login(method="POST") 
                .campo
                    label(for="password") Ingresar  contraseña:
                    input(type="password" name="password" placeholder="Ingresa una nueva contraseña")

                .campo.enviar
                    input.boton(type="submit" value="Restablecer")